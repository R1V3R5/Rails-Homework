= form_for @patient do |f|
  = render 'layouts/error_messages', object: @patient
  %br
    =f.label :name
    =f.text_field :name, placeholder: "Name"
    %br
      =f.label :phone_number
      =f.text_field :phone_number, placeholder: "Phone Number"
      %br
        =f.label :email
        =f.text_field :email, placeholder: "Email"
        %br
          =f.label :address1
          =f.text_field :address1, placeholder: "Address 1"
          %br
            =f.label :address2
            =f.text_field :address2, placeholder: "Address 2"
            %br
              =f.label :city
              =f.text_field :city, placeholder: "City"
              %br
                =f.label :state
                =f.text_field :state, placeholder: "State"
                %br  
                  =f.label :zip
                  =f.text_field :zip, placeholder: "Zip"
                  %br
 
  =f.submit
%hr
= link_to "Home", root_path